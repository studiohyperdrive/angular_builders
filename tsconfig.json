{
    "compilerOptions": {
        "baseUrl": "tsconfig",
        "target": "es6",
		"declaration": true,
		"esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "dist/lib",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "types": [
            "node",
        ]
	},
	"include": [
		"lib/**/*.ts"
	],
    "exclude": [
        "**/*.spec.ts"
    ]
}
